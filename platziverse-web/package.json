{
  "name": "platziverse-web",
  "version": "1.0.0",
  "description": "A Simple IoT Platform - Web Dashboard",
  "main": "server.js",
  "scripts": {
    "start": "NODE_ENV=production node server.js",
    "prestart": "npm run build",
    "build": "NODE_ENV=production browserify -g envify -t babelify -t vueify -e client/app.js | terser -c -m -o public/bundle.js",
    "start-dev": "DEBUG=platziverse:* nodemon server.js",
    "prestart-dev": "npm run build-dev",
    "build-dev": "browserify -g envify -t babelify -t vueify -e client/app.js -o public/bundle.js",
    "lint": "standard"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/platzi/platziverse.git"
  },
  "author": "Julian Duque <julianduquej@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/platzi/platziverse/issues"
  },
  "homepage": "https://github.com/platzi/platziverse#readme",
  "devDependencies": {
    "@babel/core": "^7.11.1",
    "@babel/preset-env": "^7.11.0",
    "babelify": "^10.0.0",
    "browserify": "^16.5.2",
    "envify": "^4.1.0",
    "nodemon": "^1.11.0",
    "standard": "^10.0.3",
    "terser": "^5.0.0",
    "vueify": "^9.4.1"
  },
  "dependencies": {
    "chalk": "^2.1.0",
    "chart.js": "^2.9.3",
    "debug": "^3.0.0",
    "express": "^4.15.4",
    "moment": "^2.27.0",
    "platziverse-agent": "file:../platziverse-agent",
    "random-material-color": "^1.0.5",
    "request": "^2.88.2",
    "request-promise-native": "^1.0.9",
    "socket.io": "^2.0.3",
    "socket.io-client": "^2.3.0",
    "vue": "^2.6.11",
    "vue-chartjs": "^3.5.0"
  }
}
